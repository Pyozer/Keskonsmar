<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/auteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@pyozer"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/authorColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/dateColor"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/jeuDeMot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:text="WOW UN JEU DE MOT SUPER COOL"
        android:fontFamily="sans-serif"
        android:textColor="@color/jdmColor"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.09" />

        <ImageView
            android:id="@+id/icon_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:contentDescription="@string/like_desc"
            android:tint="@color/iconColor"
            app:srcCompat="@drawable/thumb_up_outline" />

        <TextView
            android:id="@+id/nbLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.13"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/statColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/icon_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:contentDescription="@string/dislike_desc"
            android:textAlignment="viewEnd"
            android:tint="@color/iconColor"
            app:srcCompat="@drawable/thumb_down_outline" />

        <TextView
            android:id="@+id/nbDislike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/statColor"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>