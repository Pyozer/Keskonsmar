<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_jdm_layout"
    tools:context="com.pyozer.keskonsmar.AddJdmActivity">

    <EditText
        android:id="@+id/add_input_jdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Ton JDM"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_input_jdm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="Créer ton propre JDM"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/add_action_submit"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_input_jdm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Validé" />

</RelativeLayout>