<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context="com.pyozer.keskonsmar.HomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/img_desc"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/home_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Bienvenue sur Keskonsmar"
        android:textAlignment="center"
        style="@style/Base.TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/home_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Retrouve ici un maximum de jeux de mots et blagues plus ou moins drÃ´les !"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/home_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Connexion"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/home_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:layout_above="@id/home_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"/>

</RelativeLayout>
